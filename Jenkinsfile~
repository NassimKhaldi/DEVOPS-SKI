pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'http://192.168.73.128:9000'  // SonarQube server URL
        SONARQUBE_TOKEN = credentials('sonar-api')  // SonarQube API token (configured in Jenkins)
        SONAR_PROJECT_KEY = 'tn.esprit' // Replace with your project key in SonarQube
    }

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'registration', url: 'https://github.com/marwaniiwael18/DEVOPS-Project.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Run SonarQube analysis after Maven build
                    sh "mvn sonar:sonar -Dsonar.projectKey=${SONAR_PROJECT_KEY} -Dsonar.host.url=${SONARQUBE_SERVER} -Dsonar.login=${SONARQUBE_TOKEN}"
                }
            }
        }

        stage('Unit Tests') {
            steps {
                // Run unit tests using Maven (JUnit tests)
                sh 'mvn test'
                junit 'target/surefire-reports/*.xml'  // Publish test results
            }
        }
    }

    post {
        success {
            echo "Build and SonarQube analysis successful!"
        }
        failure {
            echo "Build or SonarQube analysis failed!"
        }
    }
}
